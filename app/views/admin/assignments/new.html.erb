<%= form_for [:admin, @assignment] do |f| %>
  <% if @assignment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@assignment.errors.count, "error") %> prohibited
        you from creating this assignment:</h2>
      <ul>
      <% @assignment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :student %>
    <%= f.collection_select :student_id, Student.all, :id, :name, {}, {class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :score %>
    <%= f.number_field :score, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :total %>
    <%= f.number_field :total, class: 'form-control' %>
  </div>

  <%= f.submit "Create assignment", class: 'btn btn-primary' %>
<% end %>
