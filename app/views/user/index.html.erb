<% link_to "Home Page", controller: "posts" %> | <%= link_to 'Create a new student', new_post_path %>                                                                                                                                         
                                                                                                                                                                                                                                               
<table>                                                                                                                                                                                                                                        
  <tr>                                                                                                                                                                                                                                         
    <th>Name</th>                                                                                                                                                                                                                              
    <th>Nickname</th>                                                                                                                                                                                                                          
    <th>Email</th>                                                                                                                                                                                                                             
    <th>Image URL</th>                                                                                                                                                                                                                         
    <th></th>                                                                                                                                                                                                                                  
    <th></th>                                                                                                                                                                                                                                  
  </tr>                                                                                                                                                                                                                                        
                                                                                                                                                                                                                                               
<% @posts.each do |post| %>                                                                                                                                                                                                                    
  <tr>                                                                                                                                                                                                                                         
    <td><%= post.name %></td>                                                                                                                                                                                                                  
    <td><%= post.nickname %></td>                                                                                                                                                                                                              
    <td><%= post.email %></td>                                                                                                                                                                                                                 
    <td><%= post.image %></td>                                                                                                                                                                                                                 
    <td><%= link_to 'Show', post %></td>                                                                                                                                                                                                       
    <td><%= link_to 'Edit', edit_post_path(post) %></td>                                                                                                                                                                                       
    <td><%= link_to 'Destroy', post_path(post),                                                                                                                                                                                                
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>                                                                                                                                                                
  </tr>                                                                                                                                                                                                                                        
<% end %>                                                                                                                                                                                                                                      
</table>  
