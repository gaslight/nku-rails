<h1>New Student Form</h1>

<%= form_for :user do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :nickname %><br>
    <%= f.text_field :nickname %>
  </p>
  <p>                                                                                                                                                                                                            
    <%= f.label :email %><br>                                                                                                                                                                                 
    <%= f.text_field :email %>                                                                                                                                                                                 
  </p> 
  <p>                                                                                                                                                                                                            
    <%= f.label :image %><br>                                                                                                                                                                                 
    <%= f.text_field :image %>                                                                                                                                                                                 
  </p>  
  <p>
    <%= f.submit %>
  </p>
<% end %>

